{
  "manifest_version": 3,
  "name": "In-Page Widget Extension",
  "version": "1.0",
  "description": "Injects a draggable floating widget into any webpage",
  "permissions": ["storage", "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "webRequest"
  ],
  "host_permissions": ["*://zoom.us/*", "http://localhost:8080/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["widget.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*",
        "dist/zoom/3.13.1/*",
        "dist/zoom/3.13.1/vendor/*",
        "dist/zoom/3.13.1/lib/av/js_media.min.js",
        "widget.html",
        "icons/assistanceIcon.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Zoom Widget"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "zoom-redirect-rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
