{
  "manifest_version": 3,
  "name": "In-Page Widget Extension",
  "version": "1.0",
  "description": "Injects a draggable floating widget into any webpage",
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["widget.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["widget.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
